{
    "name": "gram-vikas-backend",
    "version": "1.0.0",
    "description": "Backend API for Gram-Vikas agricultural marketplace platform connecting farmers, buyers, and rural communities",
    "main": "server.js",
    "engines": {
      "node": ">=16.0.0",
      "npm": ">=8.0.0"
    },
    "scripts": {
      "start": "node server.js",
      "dev": "nodemon server.js",
      "test": "jest",
      "test:watch": "jest --watch",
      "test:coverage": "jest --coverage",
      "init-db": "node scripts/init-db.js",
      "test-endpoints": "node scripts/test-endpoints.js",
      "lint": "eslint . --ext .js",
      "lint:fix": "eslint . --ext .js --fix",
      "setup": "npm install && npm run init-db",
      "docker:build": "docker build -t gram-vikas-backend .",
      "docker:run": "docker run -p 3000:3000 gram-vikas-backend"
    },
    "keywords": [
      "agriculture",
      "marketplace",
      "farmers",
      "rural-development",
      "api",
      "nodejs",
      "express",
      "postgresql",
      "gram-vikas",
      "shg",
      "aggregation-hubs",
      "bidding-system"
    ],
    "author": {
      "name": "Gram-Vikas Team",
      "email": "dev@gramvikas.com",
      "url": "https://gramvikas.com"
    },
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/gram-vikas/backend.git"
    },
    "bugs": {
      "url": "https://github.com/gram-vikas/backend/issues"
    },
    "homepage": "https://github.com/gram-vikas/backend#readme",
    "dependencies": {
      "express": "^4.18.2",
      "pg": "^8.11.3",
      "bcryptjs": "^2.4.3",
      "jsonwebtoken": "^9.0.2",
      "cors": "^2.8.5",
      "helmet": "^7.1.0",
      "dotenv": "^16.3.1",
      "multer": "^1.4.5-lts.1",
      "express-rate-limit": "^7.1.5",
      "compression": "^1.7.4",
      "express-validator": "^7.0.1",
      "winston": "^3.11.0",
      "morgan": "^1.10.0",
      "uuid": "^9.0.1",
      "moment": "^2.29.4",
      "nodemailer": "^6.9.7",
      "axios": "^1.6.2",
      "colors": "^1.4.0",
      "redis": "^4.6.10",
      "joi": "^17.11.0",
      "sharp": "^0.32.6",
      "csv-parser": "^3.0.0",
      "pdf-lib": "^1.17.1",
      "qrcode": "^1.5.3"
    },
    "devDependencies": {
      "nodemon": "^3.0.2",
      "jest": "^29.7.0",
      "supertest": "^6.3.3",
      "eslint": "^8.55.0",
      "eslint-config-standard": "^17.1.0",
      "eslint-plugin-import": "^2.29.0",
      "eslint-plugin-node": "^11.1.0",
      "eslint-plugin-promise": "^6.1.1",
      "@types/jest": "^29.5.8",
      "cross-env": "^7.0.3"
    },
    "jest": {
      "testEnvironment": "node",
      "collectCoverageFrom": [
        "**/*.js",
        "!node_modules/**",
        "!coverage/**",
        "!jest.config.js",
        "!server.js"
      ],
      "coverageDirectory": "coverage",
      "coverageReporters": [
        "text",
        "lcov",
        "html"
      ],
      "testMatch": [
        "**/__tests__/**/*.js",
        "**/?(*.)+(spec|test).js"
      ],
      "verbose": true,
      "forceExit": true,
      "clearMocks": true,
      "resetMocks": true,
      "restoreMocks": true
    },
    "eslintConfig": {
      "extends": [
        "standard"
      ],
      "env": {
        "node": true,
        "jest": true,
        "es6": true
      },
      "rules": {
        "no-console": "warn",
        "no-unused-vars": "error",
        "prefer-const": "error",
        "no-var": "error"
      }
    },
    "nodemonConfig": {
      "watch": [
        "."
      ],
      "ext": "js,json",
      "ignore": [
        "node_modules/",
        "coverage/",
        "logs/",
        "uploads/"
      ],
      "delay": "2000"
    },
    "config": {
      "port": 3000,
      "db_host": "localhost",
      "db_port": 5432,
      "db_name": "gram_vikas_dev",
      "redis_host": "localhost",
      "redis_port": 6379
    }
  }
